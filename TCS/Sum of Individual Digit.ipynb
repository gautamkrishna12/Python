   "source": [
    "#Normal\n",
    "Sum=0\n",
    "n=int(input())\n",
    "while n>0:\n",
    "    Sum+=n%10\n",
    "    n//=10\n",
    "print(Sum)"
   ]
  },
  {
   "cell_type": "code",
